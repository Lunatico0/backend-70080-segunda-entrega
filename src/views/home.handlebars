<h1 class="my-8 text-white text-4xl font-bold">Productos</h1>

<div class="flex justify-center items-center gap-2 flex-wrap">
  {{#each products}}
  <div class="flex flex-col justify-between bg-slate-600 rounded w-60 min-h-32 h-[400px] p-1">
    <div class="'flex', 'flex-col', 'justify-between', 'bg-slate-600', 'rounded', 'w-60', 'min-h-32', 'h-[400px]', 'p-1'">
      <img src="{{this.thumbnails}}" alt="{{this.title}}" class="w-full h-auto object-cover">
      <h2 class="text-xl itemDescripcion"> {{this.title}} </h2>
      <h3 class="text-sm"> {{this.description}} </h3>
      <p> ${{this.price}} </p>
    </div>
    <button class="bg-slate-400/90 border-slate-400 border hover:bg-slate-500 active:bg-slate-300 active:text-black mt-3 rounded text-white" id="{{this.id}}">Agregar</button>
  </div>
  {{/each}}
</div>

<style>
  .itemDescripcion {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
  }
</style>
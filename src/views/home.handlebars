<h1 class="mt-8 text-white text-3xl font-bold">Productos</h1>

<div class="flex mx-auto gap-8 max-w-7xl w-3/4 flex-wrap">
  {{#each products}}
  <div class="flex flex-col bg-slate-600 rounded w-[13rem] h-[8rem] p-2">
    <div class="flex flex-col justify-center text-white">
      <h2 class="text-xl"> {{this.title}} </h2>
      <h3 class="text-sm"> {{this.description}} </h3>
      <p> ${{this.price}} </p>
    </div>
    <button class="bg-slate-400/90 border-slate-400 border hover:bg-slate-500 active:bg-slate-300 active:text-black mt-3 rounded text-white" id="{{this.id}}">Agregar</button>
  </div>
  {{/each}}
</div>